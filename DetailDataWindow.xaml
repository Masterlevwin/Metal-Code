<Window x:Class="Metal_Code.DetailDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metal_Code"
        mc:Ignorable="d"
        Title="Раскрой комплекта" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" WindowStartupLocation="CenterScreen" FontFamily="Century" Closed="FocusMainWindow" Loaded="DetailDataWindow_Loaded" Width="300">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="5">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Подтвердить" Click="Accept" Padding="5"/>
            <Button Content="Отмена" Click="Cancel" Margin="10,0,0,0" Padding="5" IsCancel="True"/>
        </StackPanel>

        <GroupBox DockPanel.Dock="Top">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="{Binding Detail.Title}" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="Count" Text="{Binding Detail.Count}" Margin="10,0,0,0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="шт" Margin="10,0,0,0" Width="20" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </GroupBox.Header>

            <StackPanel Margin="5">
                
                <Button Content="Загрузить DXF" Click="Load_Model" HorizontalAlignment="Left" Margin="5" Padding="5" Visibility="Hidden"/>
                
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock x:Name="BilletType" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Billet.S}" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue" Width="30" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="мм" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Высота (А):" VerticalAlignment="Center" Width="80"/>
                    <TextBlock Text="{Binding Billet.A}" VerticalAlignment="Center" Width="35" Margin="10,0,0,0" FontWeight="Bold"/>
                    <TextBlock Text="мм" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Ширина (В):" VerticalAlignment="Center" Width="80"/>
                    <TextBlock Text="{Binding Billet.B}" VerticalAlignment="Center" Width="35" Margin="10,0,0,0" FontWeight="Bold"/>
                    <TextBlock Text="мм" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox DockPanel.Dock="Top" Margin="0,10,0,5">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Состав комплекта" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <Button Content="Добавить" Padding="5" Margin="10,0,0,0" Click="Add_DetailData"/>
                </StackPanel>
            </GroupBox.Header>

            <ListBox ItemsSource="{Binding Details}" Margin="5" Padding="5" MaxHeight="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="5" Visibility="{Binding IsLaser, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Высота" Width="80" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Width}" Margin="10,0,0,0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                    <TextBlock Text="мм" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="5" Visibility="{Binding IsLaser, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Ширина" Width="80" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Height}" Margin="10,0,0,0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                    <TextBlock Text="мм" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="5" Visibility="{Binding IsPipe, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Длина" Width="80" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Length}" Margin="10,0,0,0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                    <TextBlock Text="мм" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Количество" Width="80" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Count}" Margin="10,0,0,0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                    <TextBlock Text="шт" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

    </DockPanel>
</Window>
