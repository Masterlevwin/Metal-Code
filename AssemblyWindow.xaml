<Window x:Class="Metal_Code.AssemblyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Metal_Code"
        mc:Ignorable="d"
        Title="Управление сборками" Closing="HideWindow" WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <self:CostConverter x:Key="CostConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition MinHeight="200"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            
            <Button Click="AddAssembly" Padding="5" VerticalAlignment="Bottom" Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/greenplus.png"/>
                    <TextBlock Text="Создать сборку" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <GroupBox Margin="10" MinWidth="400" HorizontalAlignment="Center">
                <GroupBox.Header>
                    <TextBlock Text="Список деталей"/>
                </GroupBox.Header>
                
                <ListView ItemsSource="{Binding CurrentParts}" Margin="5" Padding="2">
                    <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Loaded="SetPicture" Width="20"/>
                                    <TextBlock Text="{Binding Title}" Margin="5,0,0,0"/>
                                    <TextBlock Text=" (" Foreground="Blue" Margin="5,0,0,0" />
                                    <TextBlock Text="{Binding Count}" Foreground="Blue"/>
                                    <TextBlock Text=" шт)" Foreground="Blue"/>
                                </StackPanel>
                            </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView >
            </GroupBox>
                
            <Image Source="/Images/question.png" Margin="-10,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" MouseEnter="ShowPopup" Width="20"/>
            <Popup x:Name="Popup" Placement="Mouse" AllowsTransparency="True" PopupAnimation="Scroll" StaysOpen="False">
                <Border BorderThickness="1" CornerRadius="1" BorderBrush="Red">
                    <StackPanel Background="Snow">
                        <TextBlock x:Name="Details" TextAlignment="Center" Padding="5"/>
                    </StackPanel>
                </Border>
            </Popup>

            <Button Click="CheckAssemblies" Padding="5" VerticalAlignment="Bottom" Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/check.png"/>
                    <TextBlock Text="Проверить сборки" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>

        <GridSplitter Grid.Row="1" ShowsPreview="False" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="1"/>

        <TreeView Grid.Row="2" Margin="20" x:Name="ParticleStack" ItemsSource="{Binding Assemblies}" BorderThickness="0">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type self:Assembly}" ItemsSource="{Binding Particles}">
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Button Click="AddCurrentParts">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/assembly.png"/>
                                <TextBlock Text="Добавить в эту сборку" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <TextBox Text="{Binding Title}" ToolTip="Введите наименование сборки" Margin="15,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Width="150"/>
                        <TextBox Text="{Binding Count}" Margin="16,0,0,0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Введите количество сборок" LostFocus="SetAssemblyCount" FontWeight="Bold" VerticalAlignment="Center"/>

                        <Button Content="Х" Click="Remove" ToolTip="Удалить сборку" BorderThickness="0" Margin="20,0,0,0" VerticalAlignment="Center"/>

                        <Image Source="/Images/works2.png" Width="16" Margin="15,0,0,0"/>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Свар" FontWeight="Bold" Margin="10,0,0,0" Width="36" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Weld}" ToolTip="Введите длину свариваемой поверхности, мм" Width="55" MaxLines="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                <ComboBox SelectedItem="{Binding Type}" ItemsSource="{Binding DataContext.Types, RelativeSource={RelativeSource AncestorType=Window}}" Margin="5,0,0,0" Width="60" ToolTip="Выберите тип расчета"/>
                            </StackPanel>
                            <TextBlock Text="{Binding WeldPrice, Converter={StaticResource CostConverter}}" Margin="10,2,0,0"/>
                        </StackPanel>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Окр" FontWeight="Bold" Margin="10,0,0,0" Width="36" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Ral}" ToolTip="Введите цвет RAL" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" MaxLines="1"/>
                                <ComboBox SelectedItem="{Binding Structure}" ItemsSource="{Binding DataContext.Structures, RelativeSource={RelativeSource AncestorType=Window}}" Margin="5,0,0,0" Width="80" ToolTip="Выберите структуру покрытия"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PaintPrice, Converter={StaticResource CostConverter}}" Margin="10,2,0,0"/>
                                <TextBlock Text="{Binding Square}" Margin="50,2,0,0"/>
                                <TextBlock Text="кв м" Margin="5,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type self:Particle}">
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Image Loaded="SetPicture" Width="20"/>
                        <TextBlock Text="{Binding Title}" Width="300" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Count}" Foreground="Blue" Width="40" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        <Button Content="Х" Click="Remove" ToolTip="Убрать деталь из сборки" BorderThickness="0" Margin="20,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

    </Grid>
</Window>
