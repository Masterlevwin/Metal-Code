<UserControl x:Class="Metal_Code.MillingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d"
             Margin="4" BorderThickness="1" BorderBrush="White">

    <StackPanel Orientation="Horizontal" Margin="5" MinHeight="25" VerticalAlignment="Top">
        <TextBlock Text="t" MinWidth="10" VerticalAlignment="Center" FontSize="14"/>
        <TextBox TextChanged="SetDepth" Margin="3,0,0,0" Text="{Binding Depth, RelativeSource={RelativeSource AncestorType={x:Type local:MillingControl}, Mode=FindAncestor}}" ToolTip="Введите глубину отверстия" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="4" MaxLines="1" MinWidth="30" MaxWidth="30" FontSize="12"/>
        <TextBlock Text="d" Margin="10,0,0,0" MinWidth="10" VerticalAlignment="Center" FontSize="14"/>
        <TextBox TextChanged="SetWide" Margin="3,0,0,0" Text="{Binding Wide, RelativeSource={RelativeSource AncestorType={x:Type local:MillingControl}, Mode=FindAncestor}}" ToolTip="Введите диаметр отверстия" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="4" MaxLines="1" MinWidth="30" MaxWidth="30" FontSize="12"/>
        <TextBlock Text="N" Margin="10,0,0,0" MinWidth="10" VerticalAlignment="Center" FontSize="14"/>
        <TextBox TextChanged="SetHoles" Margin="3,0,0,0" Text="{Binding Holes, RelativeSource={RelativeSource AncestorType={x:Type local:MillingControl}, Mode=FindAncestor}}" ToolTip="Введите количество однотипных отверстий" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="4" MaxLines="1" MinWidth="30" MaxWidth="30" FontSize="12"/>
        <TextBlock Foreground="Red" Margin="15,0,0,0" Text="{Binding Time, RelativeSource={RelativeSource AncestorType={x:Type local:MillingControl}, Mode=FindAncestor}}" VerticalAlignment="Center" FontWeight="Medium" FontSize="14" MaxWidth="25" MinWidth="25"/>
        <TextBlock Text="мин" Margin="3,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <TextBlock Text="(⌀ фрезы - " Margin="5,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <TextBlock Text="{Binding Cutter, RelativeSource={RelativeSource AncestorType={x:Type local:MillingControl}, Mode=FindAncestor}}" Margin="3,0,0,0" VerticalAlignment="Center" FontSize="14" Foreground="Blue" MinWidth="14"/>
        <TextBlock Text=")" Margin="3,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <Button Click="Remove" ToolTip="Удалить обработку" Content="Х" FontWeight="Bold" Padding="0" FontSize="8" BorderThickness="0" MouseEnter="EnterBorder" MouseLeave="LeaveBorder" VerticalAlignment="Top" Margin="5,0,0,0" MinWidth="10"/>
    </StackPanel>
</UserControl>
