<UserControl x:Class="Metal_Code.ExtraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="140">
    <Grid>
        <TextBox Text="{Binding NameExtra, RelativeSource={RelativeSource AncestorType={x:Type local:ExtraControl}, Mode=FindAncestor}}" ToolTip="Введите наименование дополнительной работы" TextChanged="SetName" MaxLines="1" Height="20" Width="70" Margin="5,0,0,0" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MinWidth="90" MinHeight="20" MaxHeight="20" MaxWidth="90"/>
        <TextBox Text="{Binding Price, RelativeSource={RelativeSource AncestorType={x:Type local:ExtraControl}, Mode=FindAncestor}}" ToolTip="Введите стоимость работы" TextChanged="SetPrice" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" MaxLength="4" MaxLines="1" HorizontalAlignment="Left" Margin="100,0,0,0" Width="40" Height="20" MinWidth="40" MinHeight="20" MaxWidth="40" MaxHeight="20"/>
    </Grid>
</UserControl>
