<UserControl x:Class="Metal_Code.BasketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Metal_Code"
             VerticalAlignment="Top">
    <UserControl.Resources>
        <local:CostConverter x:Key="CostConverter"/>
    </UserControl.Resources>

    <Border x:Name="RootElement" Padding="5" Margin="456,2,30,2" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" HorizontalAlignment="Left">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>

            <!-- Наименование -->
            <TextBox Grid.Column="0" Text="{Binding NameBasket}"
                     hc:InfoElement.Placeholder="Покупное изделие" 
                     Style="{StaticResource TextBoxExtend}" Margin="0,0,4,0"
                     ToolTip="Введите наименование изделия"/>

            <!-- Количество -->
            <hc:NumericUpDown Grid.Column="1" Value="{Binding Quantity}"
                              hc:InfoElement.Placeholder="шт"
                              Width="70" Margin="0,0,4,0" Maximum="999999" Minimum="0"
                              ToolTip="Введите количество"/>

            <!-- Цена за единицу -->
            <TextBox Grid.Column="2" Text="{Binding Price, Converter={StaticResource CostConverter}}"
                     Style="{StaticResource TextBoxExtend}" Width="70" Margin="0,0,4,0"
                     ToolTip="Введите цену за 1 шт"/>

            <!-- Итого -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <TextBox Text="{Binding Total, Converter={StaticResource CostConverter}, Mode=OneWay}"
                     Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
                     Width="70" Foreground="#C25A00" IsReadOnly="True" HorizontalContentAlignment="Right"/>
                <Button Click="Remove" local:DeleteHighlight.TargetElement="{Binding ElementName=RootElement}"
                        ToolTip="Удалить изделие" Content="Х" FontWeight="Bold" Padding="0" FontSize="8"
                        BorderThickness="0" VerticalAlignment="Top" Width="10" Height="10"
                        HorizontalAlignment="Right" Margin="5,0,0,0"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>