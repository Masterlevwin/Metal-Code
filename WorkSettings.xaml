<Window x:Class="Metal_Code.WorkSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вид работы" Style="{DynamicResource WindowStyle}" Height="250" Width="300" Topmost="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/app_logo.jpeg">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{DynamicResource TextBlockStyle}" Text="Наименование" Margin="8" />
        <TextBox Style="{DynamicResource TextBoxStyle}" Text="{Binding Name}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8" />
        <TextBlock Style="{DynamicResource TextBlockStyle}" Margin="8" Grid.Row="1" Text="Цена" />
        <TextBox Style="{DynamicResource TextBoxStyle}" Text="{Binding Price}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8" Grid.Row="1" />
        <TextBlock Style="{DynamicResource TextBlockStyle}" Margin="8" Grid.Row="2" Text="Минимальное время, мин" TextWrapping="Wrap"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" Text="{Binding Time}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8" Grid.Row="2" />
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
            <Button Style="{DynamicResource ButtonStyle}" IsDefault="True" Click="Accept_Click" Margin="8" MinWidth="60" >OK</Button>
            <Button Style="{DynamicResource ButtonStyle}" IsCancel="True" Margin="8" MinWidth="60" >Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
