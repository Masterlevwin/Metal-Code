<UserControl x:Class="Metal_Code.PartViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Width="60" VerticalAlignment="Top" Height="60"/>
        <Image x:Name="Picture" Loaded="SetPicture" Width="46" VerticalAlignment="Top" Margin="4"/>
        <TextBox Text="{Binding Count}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" ToolTip="Количество деталей" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="50"/>

    </Grid>
</UserControl>
