<Window x:Class="Metal_Code.TypeDetailSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Типовая деталь" Style="{DynamicResource WindowStyle}" Height="250" Width="300" Topmost="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/app_logo.jpeg">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Наименование" Style="{DynamicResource TextBlockStyle}" Margin="8,8,8,8" />
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
            <Button Style="{DynamicResource ButtonStyle}" Margin="8" IsDefault="True" Click="Accept_Click" MinWidth="60" >OK</Button>
            <Button Style="{DynamicResource ButtonStyle}" Margin="8" IsCancel="True" MinWidth="60" >Отмена</Button>
        </StackPanel>
        <TextBlock Text="Цена" Style="{DynamicResource TextBlockStyle}" Margin="8,8,8,8" Grid.Row="1" />
        <TextBox Text="{Binding Name}" Style="{DynamicResource TextBoxStyle}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8,8,8,8" />
        <TextBox Text="{Binding Price}" Style="{DynamicResource TextBoxStyle}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8,8,8,8" Grid.Row="1" />
        <TextBlock Text="Виды" Style="{DynamicResource TextBlockStyle}" Margin="8,8,8,8" Grid.Row="2" />
        <TextBox x:Name="DictText" Style="{DynamicResource TextBoxStyle}" Text="{Binding Sort}" Grid.Column="1" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="8,8,8,8" Grid.Row="2" ToolTip="Формат записи:&quot;[вид],[A],[B],[S],&quot;" />
    </Grid>
</Window>
