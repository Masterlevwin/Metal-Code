<Window x:Class="Metal_Code.SpecWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Metal_Code"
        mc:Ignorable="d"
        Title="Спецификация" WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" SizeToContent="WidthAndHeight" ResizeMode="NoResize">

    <DockPanel LastChildFill="True" Margin="10" VerticalAlignment="Center">

        <GroupBox DockPanel.Dock="Top" DataContext="{Binding CurrentTemplate}">
            <GroupBox.Header>
                <TextBlock Text="Заголовок" FontWeight="Bold"/>
            </GroupBox.Header>

            <TextBox Text="{Binding Header}" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextWrapping="Wrap" Width="200" MinHeight="30"/>
        </GroupBox>
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <TextBlock Text="СПЕЦИФИКАЦИЯ №" VerticalAlignment="Center"/>
            <TextBox Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" MinHeight="25"/>
            <TextBlock Text="от" VerticalAlignment="Center"/>
            <TextBlock Text="/дата/" VerticalAlignment="Center" Margin="5"/>
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Top" Margin="5">
            <TextBlock Text="Срок поставки:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Text="Условия доставки:" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Text="Условия оплаты:" VerticalAlignment="Center" Margin="5"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <StackPanel Margin="5">
                <TextBlock Text="ПОСТАВЩИК" VerticalAlignment="Center" Margin="5"/>
                <ComboBox ItemsSource="{Binding Providers}" SelectedIndex="0" Width="150" MinHeight="22"/>
                <TextBlock Text="_______________" VerticalAlignment="Center" Margin="5"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="ПОКУПАТЕЛЬ" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="{Binding CurrentCustomer.Name}" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" MinWidth="150" MinHeight="22"/>
                <TextBlock Text="_______________" VerticalAlignment="Center" Margin="5"/>
            </StackPanel>
        </StackPanel>
        
        <Button DockPanel.Dock="Bottom" Click="Create_Spec" Margin="5" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" Margin="5" MaxHeight="20">
                <Image Source="/Images/save4.png"/>
                <TextBlock Text="Создать" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Button>

    </DockPanel>
</Window>