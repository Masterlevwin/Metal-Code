<UserControl x:Class="Metal_Code.PartBendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="90" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" ToolTip="ПКМ - Добавить или Удалить">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Добавить" Click="AddBend"></MenuItem>
            <MenuItem Header="Удалить" Click="Remove"></MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <TextBox TextChanged="SetBend" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="20" MaxHeight="20" MaxWidth="30" MinWidth="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Введите количество однотипных гибов"/>
        <ComboBox x:Name="ShelfDrop" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" MinHeight="20" MaxHeight="20" MinWidth="50" MaxWidth="50" Margin="40,0,0,0" SelectedIndex="0" ToolTip="Выберите длину гиба"/>
    </Grid>
</UserControl>
