<Window x:Class="Metal_Code.MainWindow"
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metal_Code"
        mc:Ignorable="d" AutomationProperties.Name="" WindowStartupLocation="CenterScreen" Closing="Exit" WindowState="Maximized" Icon="/app_logo.jpeg" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" FontFamily="Century" MinWidth="1280" MinHeight="720">
    
    <Window.Resources>
        <local:CostConverter x:Key="CostConverter"/>
        <local:IsAgentToTextConverter x:Key="IsAgentToTextConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Плавные функции для анимации -->
        <PowerEase x:Key="EaseOut" EasingMode="EaseOut"/>
        <PowerEase x:Key="EaseIn" EasingMode="EaseIn"/>
        
        <Storyboard x:Key="ExpandParts">
            <DoubleAnimation Storyboard.TargetName="PartsStack"
                     Storyboard.TargetProperty="Height"
                     Duration="0:0:0.35"
                     EasingFunction="{StaticResource EaseOut}"/>
        </Storyboard>

        <Storyboard x:Key="CollapseParts">
            <DoubleAnimation Storyboard.TargetName="PartsStack"
                     Storyboard.TargetProperty="Height"
                     To="0"
                     Duration="0:0:0.3"
                     EasingFunction="{StaticResource EaseIn}"/>
        </Storyboard>

        <!-- Цвета -->
        <SolidColorBrush x:Key="ButtonBackground" Color="#FFFFFFE1"/>
        <SolidColorBrush x:Key="BorderColor" Color="#D1D9E0"/>
        <SolidColorBrush x:Key="FocusBorderColor" Color="#4A90E2"/>

        <!-- Общая толщина границы -->
        <Thickness x:Key="DefaultBorderThickness">1</Thickness>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
            <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
            <Setter Property="Padding" Value="4" />
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource FocusBorderColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
            <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource FocusBorderColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для Button -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource ButtonBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
            <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFFFFFF" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorderColor}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ToggleButton -->
        <Style x:Key="ExpandToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <!-- Основной текст из Content -->
                                <ContentPresenter x:Name="ContentPresenter"
                                          ContentSource="Content"
                                          RecognizesAccessKey="True"
                                          VerticalAlignment="Center"/>
                                <!-- Стрелка-индикатор состояния -->
                                <TextBlock x:Name="Arrow"
                                   Text="▼"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="Text" Value="▲"/>
                                <!-- Опционально: подсветка при раскрытом состоянии -->
                                <Setter Property="Background" Value="#F0F8FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource FocusBorderColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Key="Q"
              Modifiers="Control" 
              Command="{Binding NewProjectCommand}"/>
        <KeyBinding Key="S"
              Modifiers="Control" 
              Command="{Binding OpenCommand}"/>
        <KeyBinding Key="D"
              Modifiers="Control" 
              Command="{Binding SaveCommand}"/>
        <KeyBinding Key="F"
              Modifiers="Control" 
              Command="{Binding LoadCommand}"/>
        <KeyBinding Key="F5"
              Command="{Binding UpdateCommand}"/>
    </Window.InputBindings>

    <DockPanel LastChildFill="True">
        
        <Menu x:Name="MenuMain" DockPanel.Dock="Top" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Padding="10,0,0,0" FontFamily="Leelawadee UI" DisplayMemberPath="{Binding CurrentManager.Name, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" VerticalAlignment="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Новый расчет" Command="{Binding NewProjectCommand}" InputGestureText="Ctrl+Q">
                    <MenuItem.Icon>
                        <Image Source="/Images/new3.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Открыть" Command="{Binding OpenCommand}" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <Image Source="/Images/open4.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Сохранить" Command="{Binding SaveCommand}" InputGestureText="Ctrl+D">
                    <MenuItem.Icon>
                        <Image Source="/Images/save.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Получить отчет">
                    <MenuItem.Icon>
                        <Image Source="/Images/report.png"/>
                    </MenuItem.Icon>
                    <MenuItem Header="Выбрать даты"/>
                    <Calendar x:Name="ReportCalendar" IsTodayHighlighted="False" SelectedDate="{Binding DisplayDate, ElementName=ReportCalendar}" SelectionMode="SingleRange"/>
                    <StackPanel>
                        <ComboBox x:Name="UserDrop" DisplayMemberPath="Name" SelectedIndex="0" Margin="0,5,0,5"/>
                        <Button Content="по заказам" Click="CreateReport" Margin="0,5,0,5"/>
                        <Button Content="по расчетам" Click="CreateReport" Margin="0,5,0,5"/>
                    </StackPanel>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Выход" Click="Exit">
                    <MenuItem.Icon>
                        <Image Source="/Images/exit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="Settings" Header="Базы">
                <MenuItem Header="База типовых деталей" Click="OpenSettings"/>
                <MenuItem Header="База работ" Click="OpenSettings"/>
                <MenuItem Header="База менеджеров" Click="OpenSettings"/>
                <MenuItem Header="База материалов" Click="OpenSettings"/>
                <Separator/>
                <MenuItem Header="Обновить базы" Click="UpdateDatabases"/>
                <Separator/>
                <MenuItem Header="Получить новые расчеты" x:Name="GetBtn" IsEnabled="{Binding IsLocal, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" Click="Show_SearchWindow">
                    <MenuItem.Icon>
                        <Image Source="/Images/new2.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Отправить расчеты" x:Name="InsertBtn" Click="InsertDatabase" IsEnabled="{Binding IsLocal, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}">
                    <MenuItem.Icon>
                        <Image Source="/Images/save2.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Header="Таблица гибов" Click="ShowTableOfBends">
                    <MenuItem.Icon>
                        <Image Source="/Images/bends.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Маршрут производства" Click="ShowRouteWindow">
                    <MenuItem.Icon>
                        <Image Source="/Images/route.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Спецификация" Click="CreateSpec">
                    <MenuItem.Icon>
                        <Image Source="/Images/open.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Паспорт качества" Click="CreatePassport">
                    <MenuItem.Icon>
                        <Image Source="/Images/list.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Простая комплектация" Click="CreateComplect">
                    <MenuItem.Icon>
                        <Image Source="/Images/complect2.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Конвертер DWG в DXF" Click="Convert_dwg_to_dxf">
                    <MenuItem.Icon>
                        <Image Source="/Images/convert.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Список задач" Click="CreateRegistryWindow">
                    <MenuItem.Icon>
                        <Image Source="/Images/express.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Сортировка файлов" Click="SortFilesByMonth">
                    <MenuItem.Icon>
                        <Image Source="/Images/screen.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="О программе">
                <MenuItem Header="Руководство" Click="OpenExample">
                    <MenuItem.Icon>
                        <Image Source="/Images/lamp.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Обновить программу" Click="Restart"/>
            </MenuItem>
            <MenuItem x:Name="Login" ToolTip="Сменить пользователя" Click="ShowLoginWindow"/>
        </Menu>
        
        <StatusBar x:Name="Status" DockPanel.Dock="Bottom" Margin="10">
            <StackPanel Orientation="Horizontal">
                <ProgressBar x:Name="InsertProgressBar" MinWidth="200" Visibility="Collapsed" IsIndeterminate="True" />
                <TextBox x:Name="NotifyText" BorderThickness="0" Margin="5,0,0,0" Background="{x:Null}"/>
            </StackPanel>
        </StatusBar>

        <Grid x:Name="WindowGrid" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>

            <GroupBox x:Name="DetailsBox" Style="{StaticResource GroupBoxOriginal}" Margin="5">
                <GroupBox.Header >
                    <StackPanel Orientation="Horizontal" Margin="5">

                        <Button Click="ShowAssemblyWindow" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/assembly.png"/>
                                <TextBlock Text="Сборки" VerticalAlignment="Center" Margin="3,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Click="AddBasket" Margin="10,0,0,0" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/basket.png"/>
                                <TextBlock Text="Покупные изделия" VerticalAlignment="Center" Margin="3,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Click="AddDetail" Margin="10,0,0,0" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/plus.png"/>
                                <TextBlock Text="Добавить" VerticalAlignment="Center" Margin="3,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button ToolTip="Создать новый расчет (Ctrl+Q)" Command="{Binding NewProjectCommand}" Padding="0" BorderThickness="0" Margin="20,0,0,0" VerticalAlignment="Top">
                            <Image Source="Images/new3.png"/>
                        </Button>

                        <Button ToolTip="Открыть сохраненный расчет (Ctrl+S)" Command="{Binding OpenCommand}" Padding="0" BorderThickness="0" Margin="10,0,0,0" VerticalAlignment="Top">
                            <Image Source="Images/open4.png"/>
                        </Button>

                        <Button ToolTip="Создать заявку за клиента" Click="CreateRequest" Padding="0" BorderThickness="0" Margin="10,0,0,0" VerticalAlignment="Top">
                            <Image Source="Images/comment.png"/>
                        </Button>

                        <Button ToolTip="Загрузить раскладки (Ctrl+F)" Command="{Binding LoadCommand}" Padding="0" BorderThickness="0" Margin="10,0,0,0" VerticalAlignment="Top">
                            <Image Source="Images/xlsx_load.png"/>
                        </Button>

                        <Expander Header="Коэффициенты" IsExpanded="False" Margin="20,0,0,0" VerticalAlignment="Top" Width="150">
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Общий" Margin="0,0,8,0" VerticalAlignment="Center" />
                                <hc:NumericUpDown Grid.Column="1"
                          Value="{Binding Ratio, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}, StringFormat='{}{0:F2}'}"
                          Minimum="0" Maximum="10" Increment="0.01" ToolTip="Введите наценку на всё КП"/>

                                <TextBlock Grid.Row="1" Text="Материал" Margin="0,8,8,0" VerticalAlignment="Center" />
                                <hc:NumericUpDown Grid.Row="1" Grid.Column="1"
                          Value="{Binding MaterialFactor, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}, StringFormat='{}{0:F2}'}"
                          Minimum="0" Maximum="10" Increment="0.01" Margin="0,8,0,0" ToolTip="Введите наценку на весь материал"/>

                                <TextBlock Grid.Row="2" Text="Услуги" Margin="0,8,8,0" VerticalAlignment="Center" />
                                <hc:NumericUpDown x:Name="ServiceFactorBox" Grid.Row="2" Grid.Column="1"
                          Value="1" Minimum="0" Maximum="10" Increment="0.01" Margin="0,8,0,0" ToolTip="Введите наценку на все услуги"
                          hc:NumericUpDown.ValueChanged="OnServiceFactorChanged"/>
                                
                                <CheckBox Grid.Row="2" Grid.Column="2" Margin="5,8,0,0" VerticalAlignment="Center"
                                    IsChecked="{Binding HasAssembly, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}"
                                    ToolTip="Добавить наценку за срочность"/>
                            </Grid>
                        </Expander>

                        <StackPanel Margin="10,0,0,0">
                            <ToggleButton x:Name="DetailsToggle" Content="{Binding Result, Converter={StaticResource CostConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"
                                          Click="OnDetailsToggleClick" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Cursor="Hand" MinWidth="150" FontSize="14" MouseEnter="UpdateResult"/>
                            <StackPanel x:Name="DetailsPanel" Visibility="Collapsed" Margin="0,6,0,0">
                                <StackPanel Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="Материал - "/>
                                    <TextBlock x:Name="MaterialTotal" Foreground="Blue"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="Услуги - "/>
                                    <TextBlock x:Name="ServicesTotal" Foreground="Blue"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="Сварка (сборки) - "/>
                                    <TextBlock x:Name="WeldTotal" Foreground="Blue"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="Окраска (сборки) - "/>
                                    <TextBlock x:Name="PaintTotal" Foreground="Blue"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="Покупные изделия - "/>
                                    <TextBlock x:Name="BasketTotal" Foreground="Blue"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                    </StackPanel>

                </GroupBox.Header>
                
                <ScrollViewer x:Name="DetailsScroll">
                    <StackPanel x:Name="DetailsStack" Margin="5"/>
                </ScrollViewer>
            </GroupBox>

            <Popup x:Name="Popup" Placement="Mouse" AllowsTransparency="True" PopupAnimation="Scroll" StaysOpen="False">
                <Border BorderThickness="1" CornerRadius="1" BorderBrush="Red">
                    <StackPanel Background="Snow">
                        <TextBlock x:Name="Details" TextAlignment="Center" Padding="5"/>
                    </StackPanel>
                </Border>
            </Popup>

            <GridSplitter Grid.Column="1" ShowsPreview="False" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" BorderThickness="1"/>

            <GroupBox Grid.Column="2" Style="{StaticResource GroupBoxOriginal}" Margin="5">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="КП №" VerticalAlignment="Center" FontWeight="Bold" Width="40"/>
                        <TextBox x:Name="Order" MaxLines="1" ToolTip="Введите номер предложения" Width="60" Margin="5,0,0,0" HorizontalContentAlignment="Center"/>
                        <TextBlock Text="{Binding IsAgent, Converter={StaticResource IsAgentToTextConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Blue" Width="50"/>
                        <hc:ComboBox hc:InfoElement.Placeholder="Выбор заказчика" x:Name="CustomerDrop" DisplayMemberPath="Name" IsEditable="True" SelectedIndex="0" SelectionChanged="CustomerChanged" Margin="5,0,0,0" Width="200" ToolTip="Выберите заказчика"/>
                        <TextBlock Text="Срок" VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                        <TextBox x:Name="DateProduction" ToolTip="Введите срок изготовления" FontWeight="Bold" MaxLines="1" Margin="5,0,0,0" Width="50" HorizontalContentAlignment="Center"/>
                        <TextBlock Text="раб/дней" Margin="5,0,0,0" VerticalAlignment="Center" Width="51"/>
                    </StackPanel>
                </GroupBox.Header>

                <Grid x:Name="OrderGrid">
                    <Grid.RowDefinitions>
                        <!-- Верхняя панель с кнопками -->
                        <RowDefinition Height="Auto"/>
                        <!-- Раскрывающаяся панель PartsStack -->
                        <RowDefinition Height="Auto"/>
                        <!-- Основное содержимое: TabControl -->
                        <RowDefinition Height="*"/>
                        <!-- Занимает всё оставшееся пространство -->
                    </Grid.RowDefinitions>
                    
                    <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                        
                        <Button Command="{Binding SaveCommand}" ToolTip="Сохранить расчет (Ctrl+D)" Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/save.png"/>
                                <TextBlock Text="Сохранить КП" VerticalAlignment="Center" Margin="5,0,0,0" Width="85"/>
                            </StackPanel>
                        </Button>

                        <ToggleButton x:Name="OfferToggle"
                                      Style="{StaticResource ExpandToggleButtonStyle}"
                                      Content="дополнительно" Width="125" Margin="45,0,0,0"
                                      ToolTip="Настройки КП — коэффициенты, доставка и прочее"
                                      Click="OnOfferToggleClick" IsChecked="True" Cursor="Hand"/>
                        
                        <hc:SearchBar hc:InfoElement.Placeholder="Поиск детали" Style="{StaticResource SearchBarExtend}" Text="{Binding SearchDetails, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="150" SearchStarted="Search_Details" Margin="45,0,0,0"/>

                    </StackPanel>

                    <StackPanel Grid.Row="1" x:Name="PartsStack" Margin="5" Height="0" ClipToBounds="True" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <RadioButton GroupName="Invoice" x:Name="OOORadioButton" Content="счет с НДС" VerticalAlignment="Center" Checked="IsAgentChanged" ToolTip="К наименованию детали будет добавлено &quot;Деталь&quot;" Margin="5,0,0,0"/>
                            <RadioButton GroupName="Invoice" x:Name="IPRadioButton" Content="счет без НДС" VerticalAlignment="Center" Checked="IsAgentChanged" IsChecked="True" ToolTip="К наименованию детали будет добавлено &quot;Изготовление детали&quot;" Margin="10,0,0,0"/>
                            <Border x:Name="LimitCheckBorder" Margin="10,0,0,0" Padding="4" CornerRadius="{DynamicResource DefaultCornerRadius}">
                                <CheckBox x:Name="LimitCheck" Content="Снять ограничения" VerticalAlignment="Center" Width="140"/>
                            </Border>
                            <Button ToolTip="Добавить заказчика" Click="AddCustomer" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0" Margin="40,0,0,0">
                                <Image Source="/Images/add.png"/>
                            </Button>
                            <Button ToolTip="Изменить данные заказчика" Click="EditCustomer" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0" Margin="20,0,0,0">
                                <Image Source="/Images/edit.png"/>
                            </Button>
                            <Button ToolTip="Удалить заказчика" Click="DeleteCustomer" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0" Margin="20,0,0,0">
                                <Image Source="/Images/del.png"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Конструктор" VerticalAlignment="Center" Width="75"/>
                                    <CheckBox x:Name="CheckConstruct" Content="{Binding Construct, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" VerticalAlignment="Center" VerticalContentAlignment="Center" ToolTip="v - работа включена в цены деталей, ■ - отдельной строкой в КП" Click="UpdateResult" IsThreeState="True" IsChecked="False" Margin="10,0,0,0" HorizontalContentAlignment="Center" Width="60"/>
                                    <TextBox x:Name="ConstructRatio" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" ToolTip="Коэффициент" TextChanged="UpdateResult" Margin="10,0,0,0" Width="40"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Бонус, %" VerticalAlignment="Center" Width="75"/>
                                    <TextBox Text="{Binding BonusRatio, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" ToolTip="Введите процент наценки" TextChanged="SetBonusRatio" Margin="10,0,0,0" Width="40"/>
                                    <TextBlock Text="{Binding Bonus, Converter={StaticResource CostConverter}, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBox x:Name="Comment" ToolTip="Введите комментарий" TextWrapping="Wrap" Width="250" HorizontalContentAlignment="Center" Height="45"/>
                                    <Image Source="/Images/comment2.png" Margin="-10,-2,0,0" Width="20" VerticalAlignment="Top"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Button Click="CreateOfferDelivery" IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" ToolTip="Создать расчет на доставку" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" BorderThickness="0" Margin="5,0,0,0">
                                        <Image Source="/Images/address.png" Width="20"/>
                                    </Button>
                                    <CheckBox x:Name="DeliveryCheck" Content="Доставка" IsChecked="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" ToolTip="v - отдельной строкой в КП, ■ - включена в цены деталей" VerticalAlignment="Center" Click="HasDeliveryChanged" IsThreeState="True" Margin="10,0,0,0" Width="80"/>
                                    <TextBox IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" Text="{Binding Delivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" x:Name="DeliveryPrice" MaxLines="1" ToolTip="Введите цену доставки" TextChanged="SetDelivery" Margin="5,0,0,0" Width="50" HorizontalContentAlignment="Center"/>
                                    <Button Click="OpenMaps" IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" Margin="5,0,0,0" ToolTip="Открыть карты" Padding="0" BorderThickness="0" Background="{x:Null}">
                                        <Image Source="/Images/maps.png"  Width="16"/>
                                    </Button>
                                    <TextBox IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" Text="{Binding DeliveryRatio, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" ToolTip="Количество доставок" TextChanged="SetDeliveryRatio" Margin="10,0,0,0" Width="30"/>
                                    <TextBlock Text="шт" VerticalAlignment="Center" Margin="5,0,0,0" Width="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBox IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" x:Name="Adress" ToolTip="Введите адрес доставки" TextWrapping="Wrap" Margin="5,0,0,0" Width="250" HorizontalContentAlignment="Center" Height="80"/>
                                    <Button Click="CreateDelivery" IsEnabled="{Binding HasDelivery, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" ToolTip="Создать запрос в логистику" Padding="0" BorderThickness="0" VerticalAlignment="Top" Background="{x:Null}">
                                        <Image Source="/Images/new.png" VerticalAlignment="Top" Margin="-10,-5,0,0" Width="20"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Ваш менеджер:" VerticalAlignment="Center" Width="90" Margin="5,0,0,0"/>
                                    <ComboBox x:Name="ManagerDrop" DisplayMemberPath="Name" ToolTip="Выберите менеджера" SelectionChanged="ManagerChanged" VerticalAlignment="Center" Width="150" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <TabControl Grid.Row="2" Margin="5">
                        <TabItem x:Name="OffersTab">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Расчеты" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    <hc:SearchBar hc:InfoElement.Placeholder="Поиск расчета" Style="{StaticResource SearchBarExtend}" Text="{Binding SearchOffers, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,0,0" Width="140" SearchStarted="Search_Offers"/>
                                    <Button x:Name="UpdateBtn" Click="UpdateOffersCollection" Margin="20,0,0,0" Padding="10,5">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/update.png"/>
                                            <TextBlock Text="Обновить список расчетов" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </TabItem.Header>

                            <DataGrid x:Name="OffersGrid" Style="{StaticResource DataGrid.Small}" Margin="5" CanUserReorderColumns="False" CanUserDeleteRows="False" CanUserAddRows="False" BorderBrush="Red" LoadingRow="OffersGrid_LoadingRow" EnableColumnVirtualization="True" CanUserResizeRows="False" AutoGenerateColumns="False" RowDetailsVisibilityMode="Collapsed" FrozenColumnCount="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="№" Binding="{Binding N}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Компания" Binding="{Binding Company}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Итого" Binding="{Binding Amount, Converter={StaticResource CostConverter}}" IsReadOnly="True"/>
                                    <DataGridCheckBoxColumn Header="Нал" Binding="{Binding Agent}"/>
                                    <DataGridTextColumn Header="Счёт" Binding="{Binding Invoice}"/>
                                    <DataGridTextColumn Header="Заказ" Binding="{Binding Order}"/>
                                    <DataGridTextColumn Header="Создан" Binding="{Binding CreatedDate, StringFormat=d.MM.y}"/>
                                    <DataGridTemplateColumn Header="Ещё" CanUserResize="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="DetailsButton" Click="ToggleRowDetails_Click"
                                                        Padding="2" Width="20" ToolTip="Показать/скрыть подробности">
                                                    <Image Source="/Images/tot.png"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Padding="4"
                                                Background="{DynamicResource RegionBrush}"
                                                CornerRadius="{DynamicResource DefaultCornerRadius}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Материал - </TextBlock>
                                                <TextBlock Margin="5,0,0,0" Text="{Binding Material, Converter={StaticResource CostConverter}}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Дата отгрузки - </TextBlock>
                                                <TextBlock Margin="5,0,0,0" Text="{Binding EndDate, StringFormat=d.MM.y}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Автор - </TextBlock>
                                                <TextBlock Margin="5,0,0,0" Text="{Binding Autor}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Загрузить" Command="{Binding OpenOfferCommand}">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/load.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Удалить" Command="{Binding RemoveOfferCommand}">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/del_offer.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Сохранить изменения" Click="UpdateOffer">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/edit_offer.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Запустить в производство" Click="LaunchToWork">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/order.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Открыть для чтения" Click="OpenOffer">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/compare.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Объединить в одно КП" Command="{Binding MergeOffersCommand}">
                                            <MenuItem.Icon>
                                                <Image Source="/Images/merge.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                        </TabItem>

                        <TabItem GotFocus="PartsView">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Предпросмотр КП" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    <Button Margin="5,0,0,0" Click="UpdatePricePart" ToolTip="Обновить цены деталей" BorderThickness="0" Padding="0">
                                        <Image Source="/Images/preview3.png" Width="16"/>
                                    </Button>
                                </StackPanel>
                            </TabItem.Header>

                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="PartsGrid" Style="{StaticResource DataGrid.Small}" IsReadOnly="True" AutoGeneratingColumn="PartsGrid_AutoGeneratingColumn"/>

                                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Bottom" Grid.Row="1" HorizontalAlignment="Right">
                                    <TextBlock Text="Общее кол-во деталей:" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox x:Name="TotalCount" MinWidth="60" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderThickness="2" Margin="5,0,0,0" MaxWidth="60"/>
                                    <TextBlock Text="Итого:" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center" MinWidth="40" MaxWidth="40"/>
                                    <TextBox x:Name="TotalPrice" MinWidth="60" Margin="5,0,0,0" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderThickness="2" MaxWidth="60"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem x:Name="ReportTab" GotFocus="ReportView">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Отчет за" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="ReportDrop" MinWidth="120" Margin="5,0,0,0" SelectionChanged="ReportChanged"/>
                                    <Button Click="CreateManagerReport" Margin="5,0,0,0" ToolTip="Сохранить отчет в папке" BorderThickness="0" Padding="0" >
                                        <Image Source="/Images/report.png" Width="16"/>
                                    </Button>
                                </StackPanel>
                            </TabItem.Header>

                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="ReportGrid" Style="{StaticResource DataGrid.Small}" CanUserReorderColumns="False" CanUserAddRows="False" BorderBrush="Blue" LoadingRow="ReportGrid_LoadingRow" EnableColumnVirtualization="True" CanUserResizeRows="False" AutoGenerateColumns="False" RowDetailsVisibilityMode="Collapsed" FrozenColumnCount="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="№" Binding="{Binding N}" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Компания" Binding="{Binding Company}" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Итого" Binding="{Binding Amount, Converter={StaticResource CostConverter}}" IsReadOnly="True"/>
                                        <DataGridCheckBoxColumn Header="Нал" Binding="{Binding Agent}"/>
                                        <DataGridTextColumn Header="Счёт" Binding="{Binding Invoice}"/>
                                        <DataGridTextColumn Header="Заказ" Binding="{Binding Order}"/>
                                        <DataGridTextColumn Header="Создан" Binding="{Binding CreatedDate, StringFormat=d.MM.y}"/>
                                        <DataGridTemplateColumn Header="Ещё" CanUserResize="False">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="DetailsButton" Click="ToggleRowDetails_Click"
                                                        Padding="2" Width="20" ToolTip="Показать/скрыть подробности">
                                                        <Image Source="/Images/tot.png"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.RowDetailsTemplate>
                                        <DataTemplate>
                                            <Border Margin="4" Padding="4"
                                                Background="{DynamicResource RegionBrush}"
                                                CornerRadius="{DynamicResource DefaultCornerRadius}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Материал -</TextBlock>
                                                    <TextBlock Margin="5,0,0,0" Text="{Binding Material, Converter={StaticResource CostConverter}}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Дата отгрузки -</TextBlock>
                                                    <TextBlock Margin="5,0,0,0" Text="{Binding EndDate, StringFormat=d.MM.y}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    <TextBlock Margin="10,0,0,0" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"
                                                           >Автор -</TextBlock>
                                                    <TextBlock Margin="5,0,0,0" Text="{Binding Autor}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGrid.RowDetailsTemplate>
                                </DataGrid>

                                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Bottom" Grid.Row="1">
                                    <TextBlock Text="Прибыль:" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox x:Name="Plan" MinWidth="60" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderThickness="2" Margin="5,0,0,0" MaxWidth="60"/>
                                    <TextBlock Text="Бонус ООО:" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox x:Name="BonusOOO" Margin="5,0,0,0" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" MinWidth="45" MaxWidth="45"/>
                                    <TextBlock Text="Бонус ИП и ПК:" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center" MinWidth="100" MaxWidth="100"/>
                                    <TextBox x:Name="BonusIP" MinWidth="45" Margin="5,0,0,0" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" MaxWidth="45"/>
                                    <TextBlock Text="Итого:" Margin="10,0,0,0" TextAlignment="Center" VerticalAlignment="Center" MinWidth="40" MaxWidth="40"/>
                                    <TextBox x:Name="Salary" MinWidth="60" Margin="5,0,0,0" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" MaxWidth="60"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>