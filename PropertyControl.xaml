<UserControl x:Class="Metal_Code.PropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="250">
    <Grid x:Name="PropertyGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120"/>
            <ColumnDefinition Width="Auto" MinWidth="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TypeDetailPrice" Grid.Column="2" MinHeight="20" MaxHeight="20" MinWidth="50" MaxWidth="50" ToolTip="Стоимость деталей" VerticalAlignment="Top" Height="20" Margin="10,0,0,0"/>
        <ComboBox VerticalAlignment="Top" ToolTip="Выберите режим расчета" HorizontalAlignment="Left" MinWidth="30" MinHeight="20" MaxWidth="30" MaxHeight="20" Height="20" Width="30" Margin="20,0,0,0"/>
        <ComboBox x:Name="MetalDrop" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="50" MinHeight="20" Grid.Column="1" MaxWidth="50" MaxHeight="20" Height="20" Width="50" Margin="10,0,0,0"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="20" MinHeight="20" MaxWidth="20" MaxHeight="20" HorizontalContentAlignment="Center" Margin="60,0,0,0" MaxLines="1"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="20" MinHeight="20" MaxWidth="20" MaxHeight="20" HorizontalContentAlignment="Center" Margin="85,0,0,0" MaxLines="1"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="20" MinHeight="20" MaxWidth="20" MaxHeight="20" HorizontalContentAlignment="Center" Margin="110,0,0,0" MaxLines="1"/>

    </Grid>
</UserControl>
