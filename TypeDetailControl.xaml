<UserControl x:Class="Metal_Code.TypeDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="350" VerticalContentAlignment="Top" HorizontalContentAlignment="Left">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Удалить" Click="Remove"></MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="TypeDetailDrop" DisplayMemberPath="Name" VerticalAlignment="Center" MinHeight="20" Margin="20,0,0,0" MinWidth="240" Height="20" SelectedIndex="0" VerticalContentAlignment="Center" MaxWidth="240" ToolTip="Выберите заготовку"/>
        <TextBox x:Name="CountText" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Count}" VerticalAlignment="Center" MinHeight="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="20,0,0,0" MinWidth="30" HorizontalAlignment="Left" Height="20" ToolTip="Введите количество" TextChanged="SetCount"/>

    </Grid>
</UserControl>
