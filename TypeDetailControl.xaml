<UserControl x:Class="Metal_Code.TypeDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="210" VerticalContentAlignment="Top" HorizontalContentAlignment="Left">
    <Grid Width="210">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="TypeDetailDrop" DisplayMemberPath="Name" VerticalAlignment="Center" MinHeight="20" Padding="0,0,0,0" Margin="20,0,0,0" MinWidth="120" Height="20" SelectedIndex="0" VerticalContentAlignment="Center"/>
        <TextBox Grid.Column="1" TextWrapping="Wrap" Text="{Binding NameTypeDetail}" VerticalAlignment="Center" MinHeight="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="20,0,0,0" MinWidth="30" HorizontalAlignment="Left" Height="20" Width="30"/>
        <Button Grid.Column="1" Content="x" MinWidth="10" MinHeight="10" Height="10" Click="Remove" HorizontalAlignment="Right" VerticalAlignment="Top" Width="10"/>

    </Grid>
</UserControl>
