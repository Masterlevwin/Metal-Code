<Window x:Class="Metal_Code.MetalSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Материал" Topmost="True" WindowStartupLocation="CenterScreen" Icon="/app_logo.jpeg" SizeToContent="WidthAndHeight" >

    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Наименование" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Name}" SpellCheck.IsEnabled="True" Language="ru-ru" Width="100" HorizontalContentAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Плотность" Width="80" Margin="5" TextAlignment="Center"/>
            <TextBlock Text="Цена за кг" Width="80" Margin="5" TextAlignment="Center"/>
            <TextBlock Text="Цена за метр" Width="80" Margin="5" TextAlignment="Center"/>
            <TextBlock Text="Цена за прокол" Width="100" Margin="5" TextAlignment="Center"/>
            <TextBlock Text="Цена за пог метр" Width="100" Margin="5" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox Text="{Binding Density}" Width="80" Margin="5"/>
            <TextBox Text="{Binding MassPrice}" Width="80" Margin="5"/>
            <TextBox Text="{Binding WayPrice}" Width="80" Margin="5"/>
            <TextBox Text="{Binding PinholePrice}" Width="100" Margin="5"/>
            <TextBox Text="{Binding MoldPrice}" Width="100" Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Margin="3" IsDefault="True" Click="Accept_Click" Width="70" >OK</Button>
            <Button Margin="20,3,3,3" IsCancel="True" Width="70" >Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>