<UserControl x:Class="Metal_Code.CutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150" Unloaded="RemovePartsTab" >
    <StackPanel Orientation="Horizontal" MaxHeight="20" VerticalAlignment="Top">
        <CheckBox IsChecked="{Binding HaveCut, RelativeSource={RelativeSource AncestorType={x:Type local:CutControl}, Mode=FindAncestor}}" ToolTip="Убрать стоимость лазера из расчета" Click="OnPriceChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2,0,0,0"/>
        <Button x:Name="CutBtn" Click="LoadFiles" Content=". . ." MinWidth="30" ToolTip="Загрузить раскладки" FontWeight="Bold" Margin="2,0,0,0"/>
        <TextBox Text="{Binding Way, RelativeSource={RelativeSource AncestorType={x:Type local:CutControl}, Mode=FindAncestor}}" TextChanged="SetWay" ToolTip="Длина пути резки, м" MouseWheel="ViewPopupWay" Margin="5,0,0,0" MinWidth="40" MaxWidth="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Text="{Binding Pinhole, RelativeSource={RelativeSource AncestorType={x:Type local:CutControl}, Mode=FindAncestor}}" TextChanged="SetPinhole" MaxWidth="40" MinWidth="40" ToolTip="Количество проколов, шт" MouseWheel="ViewPopupPinhole" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Popup x:Name="PopupWay" StaysOpen="False" Placement="Mouse" MaxWidth="120" AllowsTransparency="True" PopupAnimation="Slide" VerticalOffset="5">
            <StackPanel Background="Snow">
                <TextBlock x:Name="WayPrice" TextAlignment="Center" Padding="3"/>
            </StackPanel>
        </Popup>
        <Popup x:Name="PopupPinhole" StaysOpen="False" Placement="Mouse" MaxWidth="120" AllowsTransparency="True" PopupAnimation="Slide" VerticalOffset="5">
            <StackPanel Background="Snow">
                <TextBlock x:Name="PinholePrice" TextAlignment="Center" Padding="3"/>
            </StackPanel>
        </Popup>

        <Image Source="/Images/question.png" VerticalAlignment="Top" MaxWidth="10" Margin="2,0,0,0">
            <Image.ToolTip>
                <ToolTip Background="Snow" BorderBrush="Red" Padding="5" BorderThickness="1">
                    <StackPanel >
                        <TextBlock Text="Стоимость лазерной резки = кол метров резки * цена метра + кол проколов * цена проколов" TextWrapping="Wrap" MaxWidth="280"/>
                    </StackPanel>
                </ToolTip>
            </Image.ToolTip>
        </Image>

    </StackPanel>
</UserControl>
