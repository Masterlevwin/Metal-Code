<UserControl x:Class="Metal_Code.CutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CutBtn" Click="LoadFiles" Content=". . ." HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center" MinHeight="20" MaxHeight="20" MaxWidth="50" MinWidth="50" ToolTip="Загрузить раскладки"/>
        <TextBox Text="{Binding Way, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CutControl}}}" HorizontalAlignment="Left" Margin="80,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" MinHeight="20" MaxHeight="20" MaxWidth="50" MinWidth="50" ToolTip="Длина пути резки, м" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="SetWay"/>
        <TextBox Text="{Binding Pinhole, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CutControl}}}" HorizontalAlignment="Left" Margin="140,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" MinHeight="20" MaxHeight="20" MaxWidth="40" MinWidth="40" ToolTip="Количество проколов, шт" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="SetPinhole"/>
        <TextBox Text="{Binding Ratio, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CutControl}}}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" MinWidth="30" MinHeight="20" MaxWidth="30" MaxHeight="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="190,0,0,0" ToolTip="Коэффициент" TextChanged="SetRatio"/>
        <TextBlock Text="{Binding Price, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CutControl}}}" Grid.Column="1" HorizontalAlignment="Left" Margin="80,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" MinHeight="20" MaxHeight="20" MinWidth="50" ToolTip="Стоимость резки"/>

    </Grid>
</UserControl>
