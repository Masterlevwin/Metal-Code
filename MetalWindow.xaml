<Window x:Class="Metal_Code.MetalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="База материалов" Topmost="True" WindowStartupLocation="CenterScreen" Closed="FocusMainWindow" Icon="/app_logo.jpeg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="ButtonsStack" Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Добавить" Margin="10" Click="Add_Click" />
            <Button Content="Изменить" Margin="10" Click="Edit_Click"  />
            <Button Content="Удалить" Margin="10" Click="Delete_Click"  />
        </StackPanel>

        <DataGrid x:Name="MetalGrid" Margin="10" IsReadOnly="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" CanUserReorderColumns="False" MinColumnWidth="30" HeadersVisibility="Column" SelectionChanged="InsMetal"/>
        <DataGrid x:Name="InsMetalGrid" Margin="10" IsReadOnly="True" Grid.Column="1" CanUserReorderColumns="False" HeadersVisibility="Column" MinColumnWidth="30"/>

    </Grid>
</Window>