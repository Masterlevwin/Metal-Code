<UserControl x:Class="Metal_Code.WorkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="260" GotFocus="PriceView">
    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" MinWidth="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="WorkDrop" DisplayMemberPath="Name" VerticalAlignment="Center" Padding="0,0,0,0" MinWidth="120" MinHeight="20" Height="20" Margin="20,0,0,0" SelectedIndex="0" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="WorkPrice" Grid.Column="1" TextWrapping="Wrap" MinWidth="30" MinHeight="20" Height="20" Text="{Binding Price}" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" TextWrapping="Wrap" Text="{Binding TotalPrice}" VerticalAlignment="Top" Height="20" MinWidth="30" MinHeight="20" HorizontalAlignment="Left" Margin="20,0,0,0"/>
        <Button Grid.Column="2" Content="x" MinWidth="10" MinHeight="10" Height="10" Click="Remove" Width="10" HorizontalAlignment="Right" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
