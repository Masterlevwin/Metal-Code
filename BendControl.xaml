<UserControl x:Class="Metal_Code.BendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Metal_Code"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="170">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Удалить" Click="Remove"/>
        </ContextMenu>
    </UserControl.ContextMenu>

    <StackPanel x:Name="BendGrid" Orientation="Horizontal" VerticalAlignment="Top">
        <TextBlock Text="Г" FontWeight="Bold" Margin="5,0,0,0" MinWidth="10"/>
        <TextBox Text="{Binding Bend, RelativeSource={RelativeSource AncestorType={x:Type local:BendControl}, Mode=FindAncestor}}" TextChanged="SetBend" ToolTip="Введите количество однотипных гибов" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2" Margin="5,0,0,0" Width="30"/>
        <ComboBox x:Name="ShelfDrop" SelectionChanged="SetShelf" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" SelectedIndex="0" ToolTip="Выберите длину гиба" Margin="5,0,0,0" Width="75"/>
        <TextBox Text="{Binding Group, RelativeSource={RelativeSource AncestorType={x:Type local:BendControl}, Mode=FindAncestor}}" ToolTip="Обозначьте группу гибов" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2" Margin="5,0,0,0" LostFocus="SetGroup" Width="25"/>

        <Image Source="/Images/question.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,0,0,0" Width="10" Height="10">
            <Image.ToolTip>
                <ToolTip Background="Snow" BorderBrush="Red" Padding="5" BorderThickness="1">
                    <StackPanel >
                        <TextBlock Text="Стоимость гибки = кол деталей * кол гибов * скидка за кол * коэф длины гиба * наценка за вес * наценка за размер * наценка за кол разных гибов" TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </ToolTip>
            </Image.ToolTip>
        </Image>

    </StackPanel>
</UserControl>
